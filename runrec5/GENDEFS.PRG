_SCREEN.WINDOWSTATE = 2
_SCREEN.CAPTION = "Recover .DEF file generation."
_SCREEN.CLOSABLE = .F.
SET SYSMENU OFF
SET CPDIALOG OFF
USE RecovLst SHARED
SCAN FOR !DELETED() AND DoGenDef
  _SCREEN.CAPTION = "Generating .DEF file for: " + ALLT(TABLEPATH)
  REPLACE RecovLst.GenDefRes;
    WITH GENDEF(ALLT(TABLEPATH), ALLT(MEMOFILE), ALLT(GENDEFOPTS))
ENDSCAN
QUIT
